.container-fluid
  %h1 Martingala
  .row
    .col-xs-6.col-md-3.form-group
      %label(for="secret") Secret
      %input#secret.form-control(placeholder="Tu API key/access token/secret" type="text")

    .col-xs-6.col-md-3.form-group
      %label(for="multiplier") Multiplicador
      .input-group
        %input#multiplier.form-control(placeholder="1.5, 2, 500" type="number" min="1.01" step="0.01" value="2")
        .input-group-addon.percentage

  .row
    .col-xs-6.col-md-3.form-group
      %label(for="stop-loss") Balance mínimo
      .input-group
        %input#stop-loss.form-control(placeholder="Balance mínimo" type="number" step="0.001")
        .input-group-addon BTC

    .col-xs-6.col-md-3.form-group
      %label(for="streak-reset") Reseteo de racha
      %input#streak-reset.form-control(placeholder="Reseteo de racha" type="number" min="1")

  .row
    .col-xs-6.col-md-3.form-group
      %label(for="initial-bet") Apuesta mínima
      .input-group
        %input#initial-bet.form-control(placeholder="Apuesta mínima" type="number" min="0.000001" value="0.00000100")
        .input-group-addon BTC

    .col-xs-6.col-md-3.form-group
      %label(for="min-rolls") Mínima cantidad de tiros
      %input#min-rolls.form-control(placeholder="Mínima cantidad de tiros" value="9" type="number" min="9")

  .row
    .col-xs-6.col-md-3.form-group
      %label(for="total-bets") Apostado hasta ahora
      .input-group
        %input#total-bets.form-control(placeholder="Apostado hasta ahora" type="number" min="0" step="0.00000001" value="0")
        .input-group-addon BTC

    .col-xs-6.col-md-3.form-group
      #play
        %label.invisible Play
        %br
        %button.btn.btn-default(type="button")
          %i.glyphicon.glyphicon-play
      #stop.collapse
        %label.invisible Stop
        %br
        %button.btn.btn-default(type="button")
          %i.glyphicon.glyphicon-stop

  .row
    .col-xs-12.col-md-6
      Balance:
      %span#current-balance
      BTC -
      Tiros:
      %span#max-rolls
      \(
      %span#plus-one>
      con
      %span#plus-one-at
      BTC)

  .row
    .col-xs-12.col-md-6
      Próxima apuesta:
      %span#next-bet
      BTC

  .row
    .col-xs-12.col-md-6
      %pre#stdout.pre-scrollable.small
